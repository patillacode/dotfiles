#!/bin/bash

export PATH=$PATH:/usr/local/sbin:/sbin:/bin/bash

# not using dircolors for ls color output
# since we have the content of the LS_COLORS env variable
# taken from https://github.com/sharkdp/vivid
export LS_COLORS="$(cat $DOTFILES_DIR/bashrc/LS_COLORS)"

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'
